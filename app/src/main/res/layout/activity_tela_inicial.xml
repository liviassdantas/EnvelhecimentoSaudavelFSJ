<?xml version="1.0" encoding="utf-8"?><!--Tela por Livia Dantas-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:layout_marginTop="32dp"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/telaInicial_btnNovoPaciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgview_tela_inicial_cadastrar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_048_start"
            android:tint="@color/pink" />

        <TextView
            android:id="@+id/Txv_tela_inicial_cadatrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/novo_paciente"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/telaInicial_btnRelatorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgview_tela_inicial_relatório"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_045_search"
            android:tint="@color/pink" />

        <TextView
            android:id="@+id/Txv_tela_inicial_relatório"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/relatório"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </LinearLayout>
</LinearLayout>